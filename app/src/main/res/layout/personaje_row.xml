<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:background="@drawable/backgound_items">

    <ImageView
        android:id="@+id/imageView_pj"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="DescripciÃ³n del contenido de la imagen"
        android:layout_marginVertical="25dp"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="11dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_namePJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_levelPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Nivel"
                android:textAppearance="?android:attr/textAppearanceLarge" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_racePJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_classPJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clase"
                android:textAppearance="?android:attr/textAppearanceLarge" />




        </LinearLayout>


    </LinearLayout>

</LinearLayout>