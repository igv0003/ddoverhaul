<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activityObj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:id="@+id/objLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ImageObj"
                android:layout_width="90dp"
                android:layout_height="81dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/icon_questionmark" />

            <ImageButton
                android:id="@+id/editObj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/icon_editpencil"/>
            <ImageButton
                android:id="@+id/deleteObj"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/icon_delete" />

        </LinearLayout>

            <TextView
                android:id="@+id/TV_nombre_obj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nombre"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_objeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="Objeto"
                android:inputType="textPersonName"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/TV_descripcion_obj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:layout_marginBottom="30dp"
                android:hint="No hay descripcion"
                android:inputType="textMultiLine"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/SpinnerTipo"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:layout_marginBottom="30dp"
                android:enabled="false"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/consumibleLayout"
            android:layout_width="match_parent"
            android:layout_height="322dp"
            android:orientation="vertical"
            android:padding="14dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/textCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textoperacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operacion"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_operacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="No tiene caracter"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/Spinnervalor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                android:enabled="false"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/equipoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:padding="16dp">

            <TextView
                android:id="@+id/textdanio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="DaÃ±o"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_danio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/Textarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Armadura"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/caja_arm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:hint="0"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posicion"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/SpinnerPosicion"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:enabled="false"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>