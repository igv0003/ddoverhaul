<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoPerfil"
                android:layout_width="139dp"
                android:layout_height="141dp"
                android:layout_marginVertical="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:contentDescription="Descripción del contenido de la imagen"
                android:scaleType="fitXY"
                android:src="@drawable/icon_username" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    style="">

                    <TextView
                        android:id="@+id/NombreP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Nombre"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_marginTop="80dp"/>
                    <ImageButton
                        android:id="@+id/CambiarUsuario"
                        android:layout_marginLeft="35dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/icon_edit">

                    </ImageButton>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/CorreoP"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/CambiarContrasena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar contraseña"
                android:textAppearance="?android:attr/textAppearanceLarge">
            </TextView>
            <TextView
                android:id="@+id/CambiarCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar Correo"
                android:textAppearance="?android:attr/textAppearanceLarge">
            </TextView>


            <TextView
                android:id="@+id/Eliminarcuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="Eliminar cuenta"
                android:textAppearance="?android:attr/textAppearanceLarge">
            </TextView>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
        <TextView
            android:id="@+id/CerraSesion"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesion"
            android:textAppearance="?android:attr/textAppearanceLarge">

        </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
