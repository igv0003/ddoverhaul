    <style name="Theme.Ddoverhaul" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e4b251</item>
        <item name="colorPrimaryVariant">#e09829</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#24070b</item>
        <item name="colorSecondaryVariant">#140406</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">#24070b</item>
        <item name="android:windowBackground">@drawable/background_paper</item>
